{
  "manifest_version": 3,
  "name": "Lite PDF Annotator",
  "version": "1.3",
  "description": "A modern, memory-efficient PDF reader and annotator. Add text to PDFs and save directly in Chrome.",
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*.pdf",
    "*://*/*.PDF",
    "file:///*"
  ]
}